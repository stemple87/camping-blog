{{#if updatePostForm}}
  <h4>Update {{post.name}}'s {{post.location}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name" placeholder=post.name}}
        </div>

        <div class="form-group">
          <label for="location">Location</label>
          {{input value=location id="location" placeholder=post.location}}
        </div>

        <div class="form-group">
          <label for="body">Body</label>
          {{input value=body id="body" placeholder=post.body}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=post.image}}
        </div>

        <button {{action 'update' post}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updatePostForm'}}>Update</button>
{{/if}}
